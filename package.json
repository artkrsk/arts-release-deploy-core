{
  "name": "@arts/release-deploy-core",
  "author": "Artem Semkin",
  "version": "1.0.0",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "description": "Shared core utilities for Release Deploy for EDD (types, constants, utilities, hooks, services)",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    },
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "peerDependencies": {
    "@wordpress/api-fetch": "^7.34.0",
    "@wordpress/element": "^6.34.0",
    "@wordpress/i18n": "^6.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^4.0.6",
    "esbuild": "^0.25.11",
    "jsdom": "^27.1.0",
    "sass": "^1.77.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "scripts": {
    "build": "tsc && node build.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dompurify": "^3.3.0"
  }
}
